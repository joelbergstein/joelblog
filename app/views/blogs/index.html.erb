<div class="row">
  <div class="col-md-offset-1 col-md-8 col-xs-offset-1 col-xs-11">
    <% @blogs.each do |blog| %>
      <div class="blog-post">
        <%= render blog %>
        <br><br>
        <%= link_to 'Read More', blog, :class => "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-3 col-xs-11 fixedblock">
    <div id="recentposts">
      <h2>Recent Blog Posts</h2>
        <ul>
        <% @blogs.each do |blog| %>
          <li><%= link_to "#{blog.title}", blog %></li>
        <% end %>
      </div>
      <br>
      <div>
          <%= link_to 'New Post', new_blog_path, :class => "btn btn-primary" %>
      </div>
  </div>
</div>

