<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<%= render partial: 'blog', locals: { blog: @blog } %>
		<br>

		<div class="row">
		<div class="col-md-6">
			<%= form_for [@blog, Comment.new] do |f| %>
		        <p>
		            <div class="field">
					    <%= f.label :author %>: 
					    <%= f.text_field :author, :class => "form-control" %>
		  			</div>
		  			<div class="field">
		    			<%= f.label :content %><br>
		    			<%= f.text_area :content, rows: "5", :class => "form-control" %>
		  			</div>
		        </p>
		        <p><%= f.submit "Add comment", :class => "btn btn-default" %></p>
			<% end %>
		</div>
	</div>

	<h2>Comments</h2>
 	<div id="comments">
        <%= render partial: 'comments/comments', locals: { blog: @blog } %>
 	</div>
		<%= link_to 'Back', blogs_path, :class => "btn btn-default" %>
	</div>
</div>
